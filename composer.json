{
    "name": "medains/basic-silex",
    "description": "A simple silex skeleton",
    "keywords": [
        "framework", "silex"
    ],
    "require": {
        "silex/silex": "~2.0",
        "symfony/asset": "~2.8|^3.0",
        "symfony/console": "~2.8|^3.0",
        "symfony/monolog-bridge": "~2.8|3.0.*",
        "symfony/twig-bridge": "~2.8|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.1.4",
        "mockery/mockery": "~0.9.1",
        "symfony/browser-kit": "^3.3"
    },
    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": { "Tests\\": "tests/" }
     },
    "scripts": {
        "test": "vendor/phpunit/phpunit/phpunit"
    }
}
